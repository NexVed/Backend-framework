{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "bin",
        "rootDir": "bin",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": false
    },
    "include": [
        "bin/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "templates"
    ]
}